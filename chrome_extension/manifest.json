{
  "manifest_version": 3,
  "name": "Google Photos Deduper",
  "version": "0.2.0",
  "description": "See https://github.com/mtalcott/google-photos-deduper",
  "permissions": ["activeTab", "tabs"],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["src/scripts/app_content.js"],
      "matches": ["*://localhost/*"]
    },
    {
      "js": ["src/scripts/google_photos_content.js"],
      "matches": ["https://photos.google.com/*"]
    }
  ]
}
