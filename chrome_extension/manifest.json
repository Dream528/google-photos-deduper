{
  "manifest_version": 3,
  "name": "Google Photos Deduper",
  "version": "0.1",
  "description": "See https://github.com/mtalcott/google-photos-deduper-python",
  "permissions": ["activeTab", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["scripts/app_content.js"],
      "matches": ["http://localhost:3000/*"]
    },
    {
      "js": ["scripts/google_photos_content.js"],
      "matches": ["https://photos.google.com/*"]
    }
  ]
}
